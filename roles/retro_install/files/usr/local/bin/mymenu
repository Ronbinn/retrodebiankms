#!/bin/bash

# while-menu-dialog: a menu driven system information program

DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

#unmute volume
pactl set-sink-volume @DEFAULT_SINK@ 100%
pactl set-sink-mute @DEFAULT_SINK@ 0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "System Information" \
    --title "$menu" \
    --clear \
    --cancel-label "Exit" \
    --menu "Please select:" $HEIGHT $WIDTH 4 \
    "1" "Retroarch KMS" \
    "2" "Groovymame KMS" \
    "3" "EmulationStation-DE KMS" \
    "4" "Retroarch Xorg" \
    "5" "Groovymame Xorg" \
    "6" "EmulationStation-DE Xorg" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    1 )
      retroarch
      ;;
    2 )
      groovymame -homepath $HOME/mame -switchres_ini
      ;;
    3 )
      myesde
      ;;
    4 )
      myesde
      ;;
    5 )
      myesde
      ;;
    6 )
      myesde
      ;;
  esac
done
